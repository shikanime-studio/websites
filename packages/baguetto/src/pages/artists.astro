---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import { getAllMakers } from "../lib/items";
import { createD1Database } from "../lib/db";

const db = createD1Database(Astro.locals);
const makers = await getAllMakers(db);

const getAvatar = (maker: any) => maker.avatarImageUrl || `https://placehold.co/400x400/ffe4e6/be123c?text=${encodeURIComponent(maker.name.substring(0, 2).toUpperCase())}`;
---

<DashboardLayout>
  <div class="container mx-auto px-4 py-8">
    <!-- Page Header -->
    <div class="text-center mb-12">
      <h1 class="text-4xl font-extrabold text-gray-900 mb-4">Discover Artists</h1>
      <p class="text-lg text-gray-600">Meet the talented creators making character merch for conventions and popup shops.</p>
    </div>

    <!-- Search and Filter Bar -->
    <div class="mb-8">
      <div class="flex flex-col sm:flex-row gap-4 items-center justify-between">
        <div class="flex-1 max-w-md">
          <input
            type="text"
            placeholder="Search artists..."
            class="input input-bordered w-full focus:border-rose-500 focus:ring-rose-500"
          />
        </div>
        <div class="flex gap-2">
          <select class="select select-bordered focus:border-rose-500 focus:ring-rose-500">
            <option>All Categories</option>
            <option>Digital Art</option>
            <option>Traditional Art</option>
            <option>Merchandise</option>
          </select>
          <select class="select select-bordered focus:border-rose-500 focus:ring-rose-500">
            <option>Sort by Name</option>
            <option>Most Popular</option>
            <option>Newest First</option>
          </select>
        </div>
      </div>
    </div>

    <!-- Artists Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
      {makers.map((maker) => (
        <div class="card bg-white shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 border border-rose-50">
          <figure class="px-4 pt-4">
            <div class="avatar">
              <div class="w-24 rounded-full ring ring-rose-200 ring-offset-base-100 ring-offset-2">
                <img
                  src={getAvatar(maker)}
                  alt={maker.name}
                />
              </div>
            </div>
          </figure>
          <div class="card-body items-center text-center">
            <h3 class="card-title text-lg text-gray-800">{maker.name}</h3>
            <p class="text-sm text-gray-600 line-clamp-2">
              {maker.description || "Creating amazing character merchandise."}
            </p>
            <div class="flex flex-wrap gap-1 justify-center mt-2">
              <span class="badge badge-primary badge-outline badge-sm">Stickers</span>
              <span class="badge badge-secondary badge-outline badge-sm">Prints</span>
            </div>
            <div class="card-actions justify-center mt-4">
              <button class="btn btn-primary btn-sm text-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Follow
              </button>
              <a href={`/artists/${maker.id}`} class="btn btn-outline btn-primary btn-sm">
                View Profile
              </a>
            </div>
            <div class="text-xs text-gray-400 mt-2">
              Joined {new Date(maker.createdAt).toLocaleDateString()}
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Empty State -->
    {makers.length === 0 && (
      <div class="text-center py-16">
        <div class="text-6xl mb-4">ðŸŽ¨</div>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No artists found</h3>
        <p class="text-gray-500">Be the first to join!</p>
      </div>
    )}

    <!-- Pagination -->
    <div class="flex justify-center mt-12">
      <div class="join">
        <button class="join-item btn bg-rose-50 border-rose-100 hover:bg-rose-100 text-rose-600">Â«</button>
        <button class="join-item btn bg-rose-500 text-white border-rose-500">1</button>
        <button class="join-item btn bg-rose-50 border-rose-100 hover:bg-rose-100 text-rose-600">2</button>
        <button class="join-item btn bg-rose-50 border-rose-100 hover:bg-rose-100 text-rose-600">3</button>
        <button class="join-item btn bg-rose-50 border-rose-100 hover:bg-rose-100 text-rose-600">Â»</button>
      </div>
    </div>
  </div>
</DashboardLayout>