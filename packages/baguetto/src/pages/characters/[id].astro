---
import FluidLayout from "../../layouts/FluidLayout.astro";
import { getCharacter, getItemsByCharacterName } from "../../lib/items";
import { createD1Database } from "../../lib/db";

const { id } = Astro.params;
const db = createD1Database(Astro.locals);

if (!id) {
  return Astro.redirect("/characters");
}

const character = await getCharacter(db, parseInt(id));

if (!character) {
  return Astro.redirect("/404");
}

const items = await getItemsByCharacterName(db, character.name);

const getImage = (char: any) => char.imageUrl || `https://placehold.co/600x400/ffe4e6/be123c?text=${encodeURIComponent(char.name)}`;
const getItemImage = (item: any) => (item.imageUrls && item.imageUrls[0]) || `https://placehold.co/400x400/ffe4e6/be123c?text=${encodeURIComponent(item.name)}`;
---

<FluidLayout>
  <div class="bg-rose-50 border-b border-rose-100">
    <div class="container mx-auto px-4 py-12">
      <div class="flex flex-col md:flex-row gap-8 items-center">
        <div class="w-full md:w-1/3 max-w-sm">
          <div class="aspect-[3/4] rounded-2xl overflow-hidden shadow-xl bg-white ring-4 ring-white">
            <img
              src={getImage(character)}
              alt={character.name}
              class="w-full h-full object-cover"
            />
          </div>
        </div>
        <div class="w-full md:w-2/3 text-center md:text-left">
          <div class="badge badge-primary mb-4">Character</div>
          <h1 class="text-4xl md:text-5xl font-black text-gray-900 mb-4">{character.name}</h1>
          <p class="text-lg text-gray-700 leading-relaxed max-w-2xl">{character.description}</p>

          <div class="flex flex-wrap gap-4 mt-8 justify-center md:justify-start">
            <button class="btn btn-primary text-white gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              Follow Character
            </button>
            <button class="btn btn-outline btn-primary gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
              </svg>
              Get Notifications
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="container mx-auto px-4 py-12">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-2xl font-bold text-gray-900">Available Merchandise</h2>
      <select class="select select-bordered select-sm">
        <option>Newest First</option>
        <option>Price: Low to High</option>
        <option>Popularity</option>
      </select>
    </div>

    {items.length > 0 ? (
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {items.map((item) => (
          <a href={`/items/${item.id}`} class="card bg-white shadow-lg hover:shadow-xl transition-all duration-300 group">
            <figure class="aspect-square overflow-hidden bg-rose-50">
              <img
                src={getItemImage(item)}
                alt={item.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
              />
            </figure>
            <div class="card-body p-4">
              <h3 class="font-bold text-gray-900 group-hover:text-rose-600 transition-colors">{item.name}</h3>
              <p class="text-rose-600 font-medium">{item.priceRange || "Price TBD"}</p>
              <div class="flex justify-between items-center mt-2">
                <span class="text-xs text-gray-500 capitalize">{item.category || "Merch"}</span>
                {item.maker && (
                  <div class="flex items-center gap-1 text-xs text-gray-500">
                    <div class="w-4 h-4 rounded-full overflow-hidden">
                       <img src={item.maker.avatarImageUrl || `https://placehold.co/50x50/ffe4e6/be123c?text=${item.maker.name[0]}`} alt={item.maker.name} class="w-full h-full object-cover" />
                    </div>
                    <span>{item.maker.name}</span>
                  </div>
                )}
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-16 bg-white rounded-2xl border border-dashed border-gray-300">
        <div class="text-6xl mb-4">üõçÔ∏è</div>
        <h3 class="text-xl font-semibold text-gray-700 mb-2">No items listed yet</h3>
        <p class="text-gray-500">Artists haven't tagged any merchandise for {character.name} yet.</p>
        <a href="/merchs" class="btn btn-primary mt-6 text-white">Browse All Items</a>
      </div>
    )}
  </div>
</FluidLayout>
