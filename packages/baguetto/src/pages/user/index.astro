---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import { createD1Database } from "../../lib/db";
import { createAuth } from "../../lib/auth";

const db = createD1Database(Astro.locals);
const auth = createAuth(db);

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

const user = session?.user;
---

<DashboardLayout>
  <div class="flex flex-col gap-4">
    <h1 class="text-3xl font-bold">User Settings</h1>
    
    {user ? (
        <div class="card bg-base-100 shadow-xl max-w-2xl">
            <div class="card-body">
                <div class="flex items-center gap-4">
                    <div class="avatar">
                        <div class="w-24 rounded-full">
                            <img src={user.image || `https://ui-avatars.com/api/?name=${user.name}`} alt={user.name} />
                        </div>
                    </div>
                    <div>
                        <h2 class="card-title text-2xl">{user.name}</h2>
                        <p class="text-neutral-content">{user.email}</p>
                    </div>
                </div>
                
                <div class="divider"></div>
                
                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Name</span>
                    </label>
                    <input type="text" value={user.name} class="input input-bordered w-full" disabled />
                </div>
                 <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input type="text" value={user.email} class="input input-bordered w-full" disabled />
                </div>
            </div>
        </div>
    ) : (
        <div class="alert alert-warning">
            <span>You need to be logged in to view this page.</span>
        </div>
    )}
  </div>
</DashboardLayout>
