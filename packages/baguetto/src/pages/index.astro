---
import FluidLayout from "../layouts/FluidLayout.astro";
import { Card } from "../components/Card";
import { Gallery } from "../components/Gallery";
import { Featured } from "../components/Featured";
import { PageTabs } from "../components/PageTabs";
import { FilterBar } from "../components/FilterBar";
import Hero from "../components/Hero.astro";

import { eq, desc } from "drizzle-orm";
import { createD1Database } from "../lib/db";
import { getRecentItems } from "../lib/items";
import * as schema from "../schema";

const db = createD1Database(Astro.locals);

const items = await getRecentItems(db, 20);

const showcases = items.map((item) => ({
  id: item.id,
  title: item.name,
  images: item.imageUrls || [],
  artist: {
    name: item.maker?.name || "Unknown Artist",
    avatar:
      item.maker?.avatarImageUrl ||
      "https://placehold.co/100x100/ccc/FFF?text=?",
    verified: true,
    level: Math.floor(Math.random() * 20) + 1,
  },
  rating: parseFloat((Math.random() * 2 + 3).toFixed(1)),
  reviewCount: Math.floor(Math.random() * 100),
  status: (item.availabilityStatus?.toUpperCase() === "AVAILABLE"
    ? "OPEN"
    : "CLOSED") as "OPEN" | "CLOSED" | "WAITLIST",
  price: item.priceRange || undefined,
}));

const categories = [
  { name: "Stickers", icon: "üè∑Ô∏è", color: "bg-pink-100 text-pink-600" },
  { name: "Prints", icon: "üé®", color: "bg-purple-100 text-purple-600" },
  { name: "Mugs", icon: "‚òï", color: "bg-cyan-100 text-cyan-600" },
  { name: "Keychains", icon: "üîë", color: "bg-blue-100 text-blue-600" },
  { name: "Apparel", icon: "üëï", color: "bg-rose-100 text-rose-600" },
  { name: "Plushies", icon: "üß∏", color: "bg-amber-100 text-amber-600" },
  { name: "Pins", icon: "üìç", color: "bg-indigo-100 text-indigo-600" },
  { name: "Doujinshi", icon: "üìö", color: "bg-green-100 text-green-600" },
];

const showcaseTabs = [
  { label: 'Featured Artists & Circles', href: '/browse?type=artists', active: true },
  { label: 'Merch Findings', href: '/browse?type=merchs', active: false },
];

const showcaseFilters = ["Random", "Latest", "AI", "Gamemakers", "Verified", "Base price", "Availability"];
---

<FluidLayout>
  <div class="space-y-4">
    <Hero />

    <!-- Commission Services -->
    <div>
      <!-- Categories Scroll -->
      <div class="carousel carousel-center w-full gap-3 pb-4 scrollbar-hide mb-8">
        {categories.map(cat => (
          <div class="carousel-item">
            <button class="flex items-center gap-2 whitespace-nowrap rounded-full bg-white border border-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm hover:bg-gray-50 transition">
              <span class={`flex h-6 w-6 items-center justify-center rounded-full ${cat.color} text-xs`}>
                {cat.icon}
              </span>
              {cat.name}
            </button>
          </div>
        ))}
        <div class="carousel-item">
          <button class="flex items-center gap-2 whitespace-nowrap rounded-full bg-gray-100 px-4 py-2 text-sm font-semibold text-gray-700 hover:bg-gray-200 transition">
            All categories &rarr;
          </button>
        </div>
      </div>

      <!-- Featured Section -->
      <Featured
        client:visible
        title="Discover Trending Merch"
        items={showcases}
        viewAllLink="/browse?type=merchs"
      />
    </div>

    <!-- Upcoming Conventions Section -->
    <div>
       <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-bold text-gray-900 flex items-center gap-2">
            <span class="text-primary font-bold">NEXT</span> Upcoming Conventions
        </h2>
        <a href="/browse?type=events" class="text-sm font-bold text-gray-900 hover:underline">View all events &rarr;</a>
      </div>

       <div class="carousel carousel-center w-full gap-3 pb-4 scrollbar-hide mb-6">
         {["USA", "Europe", "Japan", "Asia", "Online", "Popup Shops"].map(cat => (
             <div class="carousel-item">
                 <button class="whitespace-nowrap rounded-full border border-gray-200 bg-white px-3 py-1.5 text-xs font-bold text-gray-600 hover:bg-gray-50">
                     {cat}
                 </button>
             </div>
         ))}
       </div>

        <!-- Convention Cards Grid -->
        <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-6 gap-4">
             {["Comiket 103", "Anime Expo", "Japan Expo", "DoKomi", "TwitchCon", "Vket"].map((name, i) => (
                 <div class="group cursor-pointer">
                    <div class="aspect-square rounded-xl bg-gray-100 overflow-hidden mb-2 relative">
                        <img src={`https://placehold.co/400x400/eee/999?text=${name.replace(' ', '+')}`} class="w-full h-full object-cover group-hover:scale-105 transition duration-300" />
                        <div class="absolute top-2 left-2 bg-white/90 p-1 rounded-full shadow-sm">
                             <div class="w-4 h-4 rounded-full bg-red-500"></div>
                        </div>
                    </div>
                    <div class="flex items-center gap-1 mb-1">
                        <span class="text-xs text-gray-500">Dec 2025</span>
                    </div>
                    <h4 class="font-bold text-sm text-gray-900 truncate">{name}</h4>
                    <div class="text-xs font-bold text-gray-900 mt-1">Tokyo, Japan</div>
                 </div>
             ))}
        </div>
    </div>

    <!-- Showcases Section -->
    <div>
        <PageTabs tabs={showcaseTabs} client:load />

        <div class="mb-6">
          <FilterBar categories={showcaseFilters} client:load />
        </div>

        <Gallery
            client:visible
            items={[
                ...showcases,
                ...showcases.slice(0, 2).map(card => ({ ...card, id: `${card.id}-duplicate` }))
            ]}
        />
    </div>

  </div>
</FluidLayout>
