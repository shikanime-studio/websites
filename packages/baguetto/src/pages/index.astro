---
import DashboardLayout from "../layouts/DashboardLayout.astro";
import { createD1Database } from "../lib/db";
import { getRecentItems, getUpcomingEvents, getFeaturedMakers, getLicenses } from "../lib/items";
import mascotImage from "../assets/mascot.webp";

const db = createD1Database(Astro.locals);

// Fetch data
const recentItems = await getRecentItems(db);
const upcomingEvents = await getUpcomingEvents(db);
const featuredMakers = await getFeaturedMakers(db);
const popularLicenses = await getLicenses(db);

// Fallback images if DB data is missing or incomplete
const getPlaceholder = (text: string) => `https://placehold.co/600x400/ffe4e6/be123c?text=${encodeURIComponent(text)}`;
---

<DashboardLayout>
  <!-- Hero Section -->
  <div class="mb-12 text-center relative overflow-hidden bg-rose-50 rounded-3xl p-8 sm:p-16">
    <div class="relative z-10">
      <h1 class="mb-6 text-4xl font-extrabold tracking-tight text-gray-900 md:text-5xl lg:text-6xl">
        Share your love for <span class="text-rose-600">Character Merch</span>
      </h1>
      <p class="mx-auto max-w-3xl text-lg text-gray-700 mb-8 leading-relaxed">
        Baguetto connects fans, artists, and licensors. Discover where to find stickers, prints, and mugs of your favorite characters at conventions and pop-up shops.
        <br class="hidden sm:block"/>
        <span class="font-medium text-rose-700">From the artist alley to your collection.</span>
      </p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a href="/browse" class="rounded-full bg-rose-600 px-8 py-4 font-bold text-white transition hover:bg-rose-700 shadow-lg hover:shadow-xl transform hover:-translate-y-1">
          Start Browsing
        </a>
        <a href="/events" class="rounded-full bg-white px-8 py-4 font-bold text-rose-600 border-2 border-rose-100 transition hover:bg-rose-50 hover:border-rose-200">
          Find Conventions
        </a>
      </div>
    </div>

    <!-- Mascot decoration -->
    <div class="absolute -bottom-10 -right-10 opacity-10 sm:opacity-20 transform rotate-12 pointer-events-none">
      <img src={mascotImage.src} alt="Mascot" class="w-64 h-64 sm:w-96 sm:h-96 object-contain" />
    </div>
  </div>

  <!-- Upcoming Events Section -->
  <div class="mb-16">
    <div class="mb-6 flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
        <span class="text-rose-500">üóìÔ∏è</span> Upcoming Events
      </h2>
      <a href="/events" class="text-sm font-semibold text-rose-600 hover:text-rose-700">View all events &rarr;</a>
    </div>

    <div class="grid grid-cols-1 gap-6 md:grid-cols-3">
      {upcomingEvents.length > 0 ? upcomingEvents.map((event) => (
        <a href={`/events/${event.id}`} class="group relative overflow-hidden rounded-2xl bg-white shadow-sm transition hover:shadow-md border border-rose-50">
          <div class="aspect-[16/9] w-full overflow-hidden bg-rose-100">
            <img
              src={event.imageUrl || getPlaceholder(event.name)}
              alt={event.name}
              class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
            />
          </div>
          <div class="p-4">
            <div class="mb-1 text-xs font-bold uppercase text-rose-600 bg-rose-50 inline-block px-2 py-0.5 rounded-full">
              {new Date(event.startsAt).toLocaleDateString(undefined, { month: 'short', day: 'numeric' })}
            </div>
            <h3 class="text-lg font-bold text-gray-900 group-hover:text-rose-600 mt-2">{event.name}</h3>
            <p class="mt-1 line-clamp-2 text-sm text-gray-500">{event.description}</p>
            <div class="mt-3 flex items-center text-xs text-gray-500">
              <span class="mr-2 flex items-center">
                üìç {event.location || "Online"}
              </span>
            </div>
          </div>
        </a>
      )) : (
        <div class="col-span-3 py-12 text-center text-gray-500 bg-white rounded-2xl border border-dashed border-gray-300">
          No upcoming events found.
        </div>
      )}
    </div>
  </div>

  <!-- Featured Items (Latest Finds) -->
  <div class="mb-16">
    <div class="mb-6 flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
        <span class="text-rose-500">üíé</span> Latest Finds
      </h2>
      <a href="/browse" class="text-sm font-semibold text-rose-600 hover:text-rose-700">View all items &rarr;</a>
    </div>

    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5">
      {recentItems.length > 0 ? recentItems.map((item) => (
        <div class="group relative flex flex-col gap-2 rounded-xl bg-white p-2 shadow-sm transition hover:shadow-md border border-rose-50">
          <div class="relative aspect-square overflow-hidden rounded-lg bg-gray-100">
            <img
              src={item.imageUrls && Array.isArray(item.imageUrls) && item.imageUrls.length > 0
                ? item.imageUrls[0]
                : getPlaceholder(item.name)}
              alt={item.name}
              class="h-full w-full object-cover transition duration-300 group-hover:scale-105"
            />
          </div>

          <div class="p-1">
            <h3 class="truncate text-sm font-bold text-gray-900 group-hover:text-rose-600">{item.name}</h3>
            <div class="flex items-center gap-2 text-xs text-gray-500 mt-1">
              {item.maker && (
                <div class="flex items-center gap-1">
                  {item.maker.avatar && (
                    <img src={item.maker.avatar} alt={item.maker.name} class="h-4 w-4 rounded-full" />
                  )}
                  <span class="truncate">{item.maker.name}</span>
                </div>
              )}
            </div>
            <div class="mt-2 font-bold text-rose-600">
              {item.price}
            </div>
          </div>
        </div>
      )) : (
        <div class="col-span-full py-12 text-center text-gray-500 bg-white rounded-2xl border border-dashed border-gray-300">
          No items found yet.
        </div>
      )}
    </div>
  </div>

  <!-- Browse by License -->
  <div class="mb-16">
    <div class="mb-6 flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
        <span class="text-rose-500">‚ú®</span> Popular Licenses
      </h2>
    </div>

    <div class="flex gap-4 overflow-x-auto pb-4 scrollbar-hide">
      {popularLicenses.length > 0 ? popularLicenses.map((license) => (
        <a href={`/licenses/${license.id}`} class="flex min-w-[120px] flex-col items-center gap-3 group">
          <div class="relative h-24 w-24 overflow-hidden rounded-full border-4 border-rose-50 p-1 transition group-hover:border-rose-200 bg-white shadow-sm">
            <img
              src={license.imageUrl || getPlaceholder(license.name)}
              alt={license.name}
              class="h-full w-full rounded-full object-cover"
            />
          </div>
          <span class="text-center text-sm font-medium text-gray-700 group-hover:text-rose-600">{license.name}</span>
        </a>
      )) : (
        <div class="w-full py-8 text-center text-gray-500">
          No licenses found.
        </div>
      )}
    </div>
  </div>

  <!-- Featured Artists -->
  <div class="mb-16">
    <div class="mb-6 flex items-center justify-between">
      <h2 class="text-2xl font-bold text-gray-900 flex items-center gap-2">
        <span class="text-rose-500">üé®</span> Featured Artists
      </h2>
      <a href="/artists" class="text-sm font-semibold text-rose-600 hover:text-rose-700">View all artists &rarr;</a>
    </div>

    <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
      {featuredMakers.length > 0 ? featuredMakers.map((maker) => (
        <a href={`/artists/${maker.id}`} class="group flex items-center gap-3 rounded-xl bg-white p-3 shadow-sm transition hover:shadow-md border border-gray-100 hover:border-rose-100">
          <img
            src={maker.avatarImageUrl || getPlaceholder(maker.name)}
            alt={maker.name}
            class="h-12 w-12 rounded-full object-cover ring-2 ring-rose-50"
          />
          <div class="overflow-hidden">
            <h3 class="truncate font-bold text-gray-900 group-hover:text-rose-600">{maker.name}</h3>
            <p class="truncate text-xs text-gray-500">{maker.description || "Artist"}</p>
          </div>
        </a>
      )) : (
        <div class="col-span-full py-12 text-center text-gray-500 bg-white rounded-2xl border border-dashed border-gray-300">
          No artists found.
        </div>
      )}
    </div>
  </div>

  <!-- Licensor Notification Section -->
  <div class="mb-12 bg-gradient-to-r from-rose-500 to-rose-600 rounded-3xl p-8 sm:p-12 text-white overflow-hidden relative">
    <div class="relative z-10 max-w-2xl">
      <h2 class="text-3xl font-extrabold mb-4">Are you a License Holder?</h2>
      <p class="text-rose-100 text-lg mb-8">
        Stay informed about your intellectual property. Get notified when artists are selling merchandise featuring your characters at conventions and pop-up shops.
      </p>
      <div class="flex gap-4">
        <button class="btn bg-white text-rose-600 hover:bg-rose-50 border-none font-bold">
          Register for Alerts
        </button>
        <button class="btn btn-outline text-white hover:bg-white/20 hover:text-white hover:border-white">
          Learn More
        </button>
      </div>
    </div>
    <div class="absolute right-0 bottom-0 opacity-10 transform translate-x-1/4 translate-y-1/4">
       <svg width="400" height="400" viewBox="0 0 24 24" fill="currentColor">
         <path d="M12 22C17.5228 22 22 17.5228 22 12C22 6.47715 17.5228 2 12 2C6.47715 2 2 6.47715 2 12C2 17.5228 6.47715 22 12 22ZM12 10.5V16.5M12 7.5H12.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
       </svg>
    </div>
  </div>
</DashboardLayout>
