---
import FluidLayout from "../../layouts/FluidLayout.astro";
import { getItem } from "../../lib/items";
import { createD1Database } from "../../lib/db";

const { id } = Astro.params;
const db = createD1Database(Astro.locals);

if (!id) {
  return Astro.redirect("/browse");
}

const item = await getItem(db, parseInt(id));

if (!item) {
  return Astro.redirect("/404");
}

const getAvatar = (maker: any) => maker.avatar || `https://placehold.co/100x100/ffe4e6/be123c?text=${encodeURIComponent(maker.name.substring(0, 2).toUpperCase())}`;
const getPlaceholder = (text: string) => `https://placehold.co/600x600/ffe4e6/be123c?text=${encodeURIComponent(text)}`;
---

<FluidLayout>
  <div class="container mx-auto px-4 py-8">
    <div class="breadcrumbs text-sm mb-6 text-gray-500">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/browse">Browse</a></li>
        <li class="text-rose-600 font-medium">{item.name}</li>
      </ul>
    </div>

    <div class="bg-white rounded-3xl shadow-xl overflow-hidden border border-rose-100">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
        <!-- Image Section -->
        <div class="bg-gray-50 p-6 lg:p-12 flex flex-col items-center justify-center">
          <div class="carousel w-full rounded-2xl shadow-lg mb-4 bg-white aspect-square relative">
            {item.imageUrls && item.imageUrls.length > 0 ? (
              item.imageUrls.map((url: string, index: number) => (
                <div id={`slide${index}`} class="carousel-item relative w-full">
                  <img src={url} class="w-full h-full object-cover" alt={`${item.name} - View ${index + 1}`} />
                  {item.imageUrls.length > 1 && (
                    <div class="absolute flex justify-between transform -translate-y-1/2 left-5 right-5 top-1/2">
                      <a href={`#slide${index === 0 ? item.imageUrls.length - 1 : index - 1}`} class="btn btn-circle btn-sm bg-white/80 border-none hover:bg-white text-gray-800">❮</a>
                      <a href={`#slide${index === item.imageUrls.length - 1 ? 0 : index + 1}`} class="btn btn-circle btn-sm bg-white/80 border-none hover:bg-white text-gray-800">❯</a>
                    </div>
                  )}
                </div>
              ))
            ) : (
              <div class="w-full h-full flex items-center justify-center">
                <img src={getPlaceholder(item.name)} alt={item.name} class="w-full h-full object-cover" />
              </div>
            )}
          </div>

          {item.imageUrls && item.imageUrls.length > 1 && (
            <div class="flex justify-center w-full py-2 gap-2 overflow-x-auto">
              {item.imageUrls.map((url: string, index: number) => (
                <a href={`#slide${index}`} class="w-16 h-16 rounded-lg overflow-hidden border-2 border-transparent hover:border-rose-500 transition-all opacity-70 hover:opacity-100">
                  <img src={url} class="w-full h-full object-cover" alt={`Thumbnail ${index + 1}`} />
                </a>
              ))}
            </div>
          )}
        </div>

        <!-- Details Section -->
        <div class="p-8 lg:p-12 flex flex-col">
          <div class="flex justify-between items-start">
            <div>
              {item.category && (
                <span class="badge badge-primary badge-outline mb-3">{item.category}</span>
              )}
              <h1 class="text-3xl lg:text-4xl font-extrabold text-gray-900 mb-2">{item.name}</h1>
            </div>
            <button class="btn btn-circle btn-ghost text-gray-400 hover:text-rose-600 hover:bg-rose-50">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </button>
          </div>

          <div class="text-2xl font-bold text-rose-600 mb-6">{item.priceRange || "Price Varies"}</div>

          <div class="prose prose-slate mb-8 max-w-none text-gray-600">
            <p>{item.description || "No description available."}</p>
          </div>

          {item.maker && (
            <div class="bg-rose-50 rounded-xl p-4 mb-8 flex items-center gap-4 border border-rose-100">
              <div class="avatar">
                <div class="w-16 rounded-full ring ring-rose-200 ring-offset-base-100 ring-offset-2">
                  <img src={getAvatar(item.maker)} alt={item.maker.name} />
                </div>
              </div>
              <div class="flex-1">
                <p class="text-xs font-semibold text-rose-600 uppercase tracking-wide">Created by</p>
                <h3 class="text-lg font-bold text-gray-900">{item.maker.name}</h3>
              </div>
              <a href={`/artists/${item.maker.id}`} class="btn btn-sm btn-outline text-rose-600 hover:bg-rose-600 hover:border-rose-600 hover:text-white">
                View Profile
              </a>
            </div>
          )}

          <div class="mt-auto pt-6 border-t border-gray-100 flex flex-col gap-3">
            <button class="btn btn-primary btn-lg w-full text-white shadow-xl shadow-rose-200 hover:shadow-rose-300 transform hover:-translate-y-0.5 transition-all">
              Check Availability
            </button>
            <p class="text-center text-xs text-gray-400 mt-2">
              Baguetto connects you with artists. Purchases are made directly through the artist's shop or at conventions.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</FluidLayout>
