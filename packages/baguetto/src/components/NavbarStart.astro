---
import { Image } from "astro:assets";
import Logo from "../assets/logo.png";
---

<div class="flex items-center">
  <div class="flex items-center gap-6">
    <a href="/" class="flex items-center gap-2 text-xl font-bold tracking-tight text-base-content hover:opacity-80 transition-opacity">
      <Image
        src={Logo}
        class="h-8 w-auto"
        alt="Baguetto Logo"
        width="32"
        height="32"
      />
      Baguetto
    </a>

    <div class="hidden md:flex items-center gap-1">
      <a href="/following" class="btn btn-ghost rounded-full font-medium text-base-content/70 hover:text-base-content hover:bg-base-200">Following</a>
      <a href="/browse" class="btn btn-ghost rounded-full font-medium text-base-content/70 hover:text-base-content hover:bg-base-200">Browse</a>
    </div>
  </div>
</div>
