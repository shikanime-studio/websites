---
import NavbarUserMenu from "./NavbarUserMenu.astro";
import { getSessionForHome } from "../lib/sessions";
import LoginButton from "./LoginButton";

interface Props {
  session?: Awaited<ReturnType<typeof getSessionForHome>>;
}
---

<div class="flex items-center">
  <div class="ml-3 flex items-center">
    {
      Astro.props.session ? (
        <NavbarUserMenu user={Astro.props.session.user} />
      ) : (
        <LoginButton client:load />
      )
    }
  </div>
</div>
