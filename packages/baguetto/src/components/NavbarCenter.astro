---
import { FaMagnifyingGlass } from "react-icons/fa6";
---

<div class="hidden lg:flex flex-1 px-4 max-w-2xl justify-center">
  <div class="relative w-full">
    <input
      type="text"
      placeholder="Search for a character, license, artist, or convention"
      class="input input-sm h-10 w-full rounded-full pl-10 pr-4 bg-base-200 border-none focus:outline-none focus:ring-2 focus:ring-primary/20 transition-all"
    />
    <div class="absolute left-3.5 top-1/2 -translate-y-1/2 text-base-content/50">
      <FaMagnifyingGlass className="w-3.5 h-3.5" />
    </div>
  </div>
</div>
