---
import "@fontsource-variable/inter";
import Wip from "../components/Wip.astro";
import Footer from "../components/Footer.astro";
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/Navbar.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <title>Reiya</title>
    <ClientRouter />
  </head>
  <body>
    <Navbar />
    <section
      class="fadein m mx-auto mb-6 mt-20 flex w-full max-w-screen-xl flex-col justify-center gap-8 md:mt-32 md:w-4/5 lg:w-4/5 xl:w-3/5"
    >
      <Wip />
      <section
        class="flex flex-1 flex-col items-center justify-center px-6 py-12"
      >
        <h1
          class="mb-8 text-center text-4xl font-bold text-gray-900 md:text-6xl"
        >
          Make money
          <br />
          doing what you love
        </h1>
        <div class="flex w-full max-w-3xl">
          <div class="relative flex flex-1">
            <input
              type="text"
              placeholder="MyPage"
              class="input input-bordered h-16 w-full rounded-full pl-[115px] pr-[100px] text-xl"
            />
            <div class="absolute left-6 top-1/2 -translate-y-[50%]">
              <span class="text-lg text-gray-500">reiya.com/</span>
            </div>
            <div class="absolute right-2 top-1/2 -translate-y-[50%]">
              <button class="btn btn-primary h-12 rounded-full px-8 text-xl">
                Claim
              </button>
            </div>
          </div>
        </div>
      </section>
      <Footer />
    </section>
  </body>
</html>
