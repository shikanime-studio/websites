---
import { Image } from "astro:assets";
import workInProgressImage from "../assets/work-in-progress.gif";
const features = [
  {
    title: "Showcase Your Unique Skills",
    description:
      "Whether it's intricate prop work, stunning makeup, or captivating photography, highlight your unique cosplay talents",
    image: workInProgressImage,
    bgColor: "bg-yellow-400",
  },
  {
    title: "Manage Commissions Like a Pro",
    description:
      "Track projects, communicate with clients, and grow your business",
    image: workInProgressImage,
    bgColor: "bg-pink-400",
  },
];
---

<section class="grid grid-cols-1 md:grid-cols-2">
  {
    features.map((feature) => (
      <div class="px-8 py-16">
        <div class={`${feature.bgColor} h-full overflow-hidden rounded-lg`}>
          <div class="p-8">
            <h3 class="mb-4 text-2xl font-bold">{feature.title}</h3>
            <p class="text-lg">{feature.description}</p>
          </div>
          <div class="relative h-64 overflow-hidden">
            <Image
              src={feature.image}
              alt={feature.title}
              class="absolute inset-0 h-full w-full object-cover"
            />
            {feature.bgColor === "bg-yellow-400" && (
              <div class="absolute bottom-4 right-4 rounded-full bg-white px-3 py-1 text-sm font-medium">
                Level up!
              </div>
            )}
          </div>
        </div>
      </div>
    ))
  }
</section>
