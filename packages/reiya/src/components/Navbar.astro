---
import NavbarStart from "./NavbarStart.astro";
import NavbarCenter from "./NavbarCenter.astro";
import NavbarEnd from "./NavbarEnd.astro";
import { getSessionForHome } from "../lib/sessions";

interface Props {
  session?: Awaited<ReturnType<typeof getSessionForHome>>;
}
---

<nav class="fixed top-0 z-50 w-full border-b border-base-200 bg-base-100">
  <div class="px-3 py-3 lg:px-5 lg:pl-3">
    <div class="flex items-center justify-between">
      <NavbarStart />
      <NavbarCenter />
      <NavbarEnd session={Astro.props.session} />
    </div>
  </div>
</nav>
