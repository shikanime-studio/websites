---
import '@fontsource-variable/inter'
import '../assets/global.css'

export const prerender = true;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>404 • Lost in Animation</title>
  </head>
  <body
    class="bg-base-200 text-base-content grid min-h-screen place-items-center p-6"
  >
    <main class="max-w-xl text-center">
      <div class="mockup-window bg-base-300 border">
        <div class="bg-base-200 px-6 py-10">
          <h1 class="text-6xl font-black">404</h1>
          <p class="mt-4 text-lg">This page went on an anime side quest.</p>
          <p class="mt-1 text-sm opacity-70">
            It promised to be back by episode 12.
          </p>
          <div class="mt-6 flex items-center justify-center gap-3">
            <a href="/" class="btn btn-primary">Go Home</a>
          </div>
        </div>
      </div>
      <p class="mt-6 text-xs opacity-60">Error code: 404 • Not Found</p>
    </main>
  </body>
</html>
