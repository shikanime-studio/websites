---
import FluidLayout from "../../layouts/FluidLayout.astro";
import { Image } from "@unpic/react";
import { createAuth } from "../../lib/auth";
import { createD1Database } from "../../lib/db";

const db = createD1Database(Astro.locals);
const auth = createAuth(db, Astro.locals);

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

const user = session?.user;
---

<FluidLayout>
  <div class="flex flex-col gap-4">
    <h1 class="text-3xl font-bold">User Settings</h1>

    {
      user ? (
        <div class="card bg-base-100 max-w-2xl shadow-xl">
          <div class="card-body">
            <div class="flex items-center gap-4">
              <div class="avatar">
                <div class="w-24 rounded-full">
                  <Image
                    src={
                      user.image ||
                      `https://ui-avatars.com/api/?name=${user.name}`
                    }
                    alt={user.name}
                    width={96}
                    height={96}
                    layout="constrained"
                    className="h-full w-full object-cover"
                  />
                </div>
              </div>
              <div>
                <h2 class="card-title text-2xl">{user.name}</h2>
                <p class="text-neutral-content">{user.email}</p>
              </div>
            </div>

            <div class="divider" />

            <div class="form-control w-full">
              <label class="label" for="user-name">
                <span class="label-text">Name</span>
              </label>
              <input
                id="user-name"
                type="text"
                value={user.name}
                class="input input-bordered w-full"
                disabled
              />
            </div>
            <div class="form-control w-full">
              <label class="label" for="user-email">
                <span class="label-text">Email</span>
              </label>
              <input
                id="user-email"
                type="text"
                value={user.email}
                class="input input-bordered w-full"
                disabled
              />
            </div>
          </div>
        </div>
      ) : (
        <div class="alert alert-warning">
          <span>You need to be logged in to view this page.</span>
        </div>
      )
    }
  </div>
</FluidLayout>
