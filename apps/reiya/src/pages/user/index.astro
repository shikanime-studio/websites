---
import FluidLayout from "../../layouts/FluidLayout.astro";
import { createAuth } from "../../lib/auth";
import { createD1Database } from "../../lib/db";
import { accounts } from "../../schema";
import { eq } from "drizzle-orm";
import { LinkAccountButton } from "../../components/LinkAccountButton";

const db = createD1Database(Astro.locals);
const auth = createAuth(db, Astro.locals);

const session = await auth.api.getSession({
  headers: Astro.request.headers,
});

const user = session?.user;

const linkedAccounts = user
  ? await db.select().from(accounts).where(eq(accounts.userId, user.id))
  : [];
const linkedProviders = linkedAccounts.map((a) => a.providerId);
---

<FluidLayout>
  <div class="flex flex-col gap-4">
    <h1 class="text-3xl font-bold">User Settings</h1>

    {
      user ? (
        <div class="card bg-base-100 max-w-2xl shadow-xl">
          <div class="card-body">
            <div class="flex items-center gap-4">
              <div class="avatar">
                <div class="w-24 rounded-full">
                  <img
                    src={
                      user.image ||
                      `https://ui-avatars.com/api/?name=${user.name}`
                    }
                    alt={user.name}
                  />
                </div>
              </div>
              <div>
                <h2 class="card-title text-2xl">{user.name}</h2>
                <p class="text-neutral-content">{user.email}</p>
              </div>
            </div>

            <div class="divider" />

            <div class="form-control w-full">
              <label class="label" for="user-name">
                <span class="label-text">Name</span>
              </label>
              <input
                id="user-name"
                type="text"
                value={user.name}
                class="input input-bordered w-full"
                disabled
              />
            </div>
            <div class="form-control w-full">
              <label class="label" for="user-email">
                <span class="label-text">Email</span>
              </label>
              <input
                id="user-email"
                type="text"
                value={user.email}
                class="input input-bordered w-full"
                disabled
              />
            </div>

            <div class="divider" />

            <h3 class="text-xl font-bold">Linked Accounts</h3>
            <div class="flex flex-col gap-4">
              <div class="flex flex-wrap gap-2">
                {linkedProviders.map((provider) => (
                  <div class="badge badge-success badge-lg gap-2 p-4 capitalize">
                    {provider}
                  </div>
                ))}
              </div>

              {!linkedProviders.includes("myAnimeList") && (
                <div class="flex flex-col gap-2">
                  <p class="text-neutral-content text-sm">
                    Link your account to import your list.
                  </p>
                  <LinkAccountButton
                    client:load
                    providerId="myAnimeList"
                    label="MyAnimeList"
                  />
                </div>
              )}
            </div>
          </div>
        </div>
      ) : (
        <div class="alert alert-warning">
          <span>You need to be logged in to view this page.</span>
        </div>
      )
    }
  </div>
</FluidLayout>
