---
import FluidLayout from '../layouts/FluidLayout.astro'
import { createD1Database } from '../lib/db'
import { categories as categoriesTable } from '../schema'

const db = createD1Database(Astro.locals)
const categories = await db.select().from(categoriesTable)
const featuredCategories = categories.slice(0, 8);
---

<FluidLayout>
  <div class="mx-auto w-full max-w-6xl">
    <div class="flex flex-col gap-12 py-10 sm:gap-16 sm:py-14">
      <section>
        <div class="mx-auto flex max-w-2xl flex-col gap-7">
          <div class="flex flex-wrap items-center gap-2">
            <span class="badge badge-primary badge-lg font-black">Beta</span>
            <span class="badge badge-ghost badge-lg font-bold">Artist Alley</span
            >
            <span class="badge badge-ghost badge-lg font-bold">Conventions</span
            >
            <span class="badge badge-ghost badge-lg font-bold">Merch</span>
          </div>

          <div class="flex flex-col gap-5">
            <h1
              class="text-5xl leading-[1.05] font-black tracking-tight text-gray-900 sm:text-6xl"
            >
              Find merch and artists‚Äîwithout the algorithm.
            </h1>

            <p
              class="max-w-xl text-lg leading-relaxed font-semibold text-gray-700 sm:text-xl"
            >
              Explore what creators are making, follow your favorites, and plan
              your next con haul.
            </p>
          </div>

          <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
            <a
              href="/explore"
              class="btn btn-primary btn-lg rounded-full px-10 font-black"
            >
              Explore
            </a>
            <a
              href="#for-artists"
              class="btn btn-ghost btn-lg rounded-full px-10 font-black"
            >
              For artists
            </a>
          </div>
        </div>
      </section>

      <section>
        <div
          class="border-base-200 bg-base-100 flex flex-col gap-4 rounded-3xl border-2 p-6 shadow-sm"
        >
          <div class="flex items-center justify-between gap-4">
            <h2 class="text-base font-black text-gray-900">
              Browse by category
            </h2>
            <a href="/explore" class="text-primary text-sm font-black">
              Explore all ‚Üí
            </a>
          </div>
          <div class="flex flex-wrap gap-2">
            {
              featuredCategories.length > 0
? (
                featuredCategories.map(cat => (
                  <a
                    href="/explore"
                    class="border-base-200 hover:border-base-300 inline-flex items-center gap-2 rounded-full border-2 bg-white px-4 py-2 text-sm font-black text-gray-900 shadow-sm transition hover:-translate-y-0.5"
                  >
                    <span class="text-base leading-none">{cat.icon}</span>
                    {cat.name}
                  </a>
                ))
              )
: (
                <>
                  <a
                    href="/explore"
                    class="border-base-200 hover:border-base-300 inline-flex items-center gap-2 rounded-full border-2 bg-white px-4 py-2 text-sm font-black text-gray-900 shadow-sm transition hover:-translate-y-0.5"
                  >
                    <span class="text-base leading-none">üè∑Ô∏è</span>
                    Stickers
                  </a>
                  <a
                    href="/explore"
                    class="border-base-200 hover:border-base-300 inline-flex items-center gap-2 rounded-full border-2 bg-white px-4 py-2 text-sm font-black text-gray-900 shadow-sm transition hover:-translate-y-0.5"
                  >
                    <span class="text-base leading-none">üé®</span>
                    Prints
                  </a>
                  <a
                    href="/explore"
                    class="border-base-200 hover:border-base-300 inline-flex items-center gap-2 rounded-full border-2 bg-white px-4 py-2 text-sm font-black text-gray-900 shadow-sm transition hover:-translate-y-0.5"
                  >
                    <span class="text-base leading-none">‚òï</span>
                    Mugs
                  </a>
                </>
              )
            }
          </div>
        </div>
      </section>

      <section>
        <div class="grid items-start gap-6 lg:grid-cols-2 lg:gap-10">
          <div
            class="border-base-200 bg-base-100 flex flex-col gap-6 rounded-3xl border-2 p-8 shadow-sm"
          >
            <div class="flex flex-col gap-3">
              <div class="text-sm font-black text-gray-600">How it works</div>
              <h2
                class="text-3xl font-black tracking-tight text-gray-900 sm:text-4xl"
              >
                Explore ‚Üí Follow ‚Üí Plan
              </h2>
              <p class="max-w-xl text-lg font-semibold text-gray-600">
                Lightweight browsing for fans, and a clean home for artists.
              </p>
            </div>

            <div class="grid gap-3 sm:grid-cols-3">
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-4"
              >
                <div class="text-primary text-2xl font-black">‚ë†</div>
                <div class="text-base font-black text-gray-900">Explore</div>
                <div class="text-sm font-semibold text-gray-600">
                  Merch, artists, and events in one place.
                </div>
              </div>
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-4"
              >
                <div class="text-secondary text-2xl font-black">‚ë°</div>
                <div class="text-base font-black text-gray-900">Follow</div>
                <div class="text-sm font-semibold text-gray-600">
                  Save creators and characters you want to revisit.
                </div>
              </div>
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-4"
              >
                <div class="text-accent text-2xl font-black">‚ë¢</div>
                <div class="text-base font-black text-gray-900">Plan</div>
                <div class="text-sm font-semibold text-gray-600">
                  Find what‚Äôs available and where to get it.
                </div>
              </div>
            </div>
          </div>

          <section
            id="for-artists"
            class="border-base-200 bg-base-100 flex scroll-mt-24 flex-col gap-6 rounded-3xl border-2 p-8 shadow-sm"
          >
            <div class="flex flex-col gap-3">
              <div class="text-sm font-black text-gray-600">
                For artists & circles
              </div>
              <h2
                class="text-3xl font-black tracking-tight text-gray-900 sm:text-4xl"
              >
                Be discoverable without feeding an algorithm.
              </h2>
              <p class="max-w-xl text-lg font-semibold text-gray-600">
                Make it easy for fans to find you, your merch, and your con
                schedule.
              </p>
            </div>

            <div class="grid gap-3">
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-5"
              >
                <div class="text-sm font-black text-gray-900">
                  Artist-friendly
                </div>
                <div class="text-sm font-semibold text-gray-600">
                  Simple pages that load fast and read well.
                </div>
              </div>
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-5"
              >
                <div class="text-sm font-black text-gray-900">
                  Convention-first
                </div>
                <div class="text-sm font-semibold text-gray-600">
                  Built for real booths, weekends, and small drops.
                </div>
              </div>
              <div
                class="border-base-200 flex flex-col gap-1 rounded-2xl border-2 bg-white p-5"
              >
                <div class="text-sm font-black text-gray-900">
                  Built in public
                </div>
                <div class="text-sm font-semibold text-gray-600">
                  Tell us what would actually make this useful for you.
                </div>
              </div>
            </div>
          </section>
        </div>
      </section>

      <section>
        <div
          class="border-base-300 bg-base-100 flex flex-col gap-6 rounded-3xl border-2 border-dashed p-8"
        >
          <div class="flex flex-col gap-3">
            <h2
              class="text-2xl font-black tracking-tight text-gray-900 sm:text-3xl"
            >
              Ready to browse?
            </h2>
            <p class="max-w-2xl text-lg font-semibold text-gray-600">
              Start in Explore, then come back when you need something new to
              draw, buy, or find for your next con.
            </p>
          </div>
          <div class="flex flex-col gap-3 sm:flex-row">
            <a
              href="/explore"
              class="btn btn-primary btn-lg rounded-full px-10 font-black"
            >
              Go to Explore
            </a>
          </div>
        </div>
      </section>
    </div>
  </div>
</FluidLayout>
